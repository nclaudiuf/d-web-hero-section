{
	"name": "web-hero-section",
	"version": "2.0.0",
	"private": true,
	"description": "Website - Hero Section",
	"author": "Claudiu N. Furca https://claudiu.design",
	"license": "ISC",
	"scripts": {
		"css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o src/",
		"css-lint": "stylelint scss/",
		"css-prefix": "postcss --replace src/config.css --use autoprefixer --map",
		"css-purge": "purgecss --keyframes --css src/config.css src/theme.css --content index.html \"node_modules/bootstrap/dist/js/{bootstrap}.js\" --output src/",
		"css": "npm-run-all css-compile css-prefix",
		"start": "parcel index.html --open",
		"build": "parcel build index.html",
		"watch": "nodemon -e html,scss -x \"npm run css\""
	},
	"dependencies": {
		"@parcel/transformer-image": "2.0.0-rc.0",
		"@popperjs/core": "2.9.3",
		"bootstrap": "5.1.0",
		"lozad": "1.16.0",
		"stylelint": "13.13.1",
		"stylelint-config-twbs-bootstrap": "2.2.3"
	},
	"devDependencies": {
		"parcel": "latest",
		"autoprefixer": "^10.2.5",
		"node-sass": "^5.0.0",
		"nodemon": "^2.0.7",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.2.10",
		"postcss-cli": "^8.3.1",
		"purgecss": "^4.0.2",
		"serve": "^11.3.2"
	},
	"keywords": ["website", "static", "html-css-js", "vanilla"]
}
